<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Life Planner</title>
  </head>
  <body>
    <div class="container">
      <div class="header"><img src="/assets/pencil-n-paper_small.jpg" alt="Small Logo" name="Insert_logo" width="180" height="90" id="Small_logo" style="background-color: #C6D580; display:block;" />

        <% if current_user %>
        Signed in as <%= current_user.name %> | <button type="submit" id="logout" onclick="logout_b()"value="0">Logout</button>
        <% else %>
        <button type="submit" id="login" onclick="login_b()"value="0">Login</button> | <button type="submit" id="signup" onclick="signup_b()"value="0">Signup</button>
        <% end %>
        <%= yield %>
        <script>
        function signup_b() {
        location.href = "/signup"
        }
        function logout_b() {
        location.href = "/logout"
        }
        function login_b(){
        location.href = "/login"
        }
        </script>
        <!-- end .header --></div>
        <div class="sidebar1">
          <ul class="nav">
            <li><%= link_to 'Home', root_path %></li>
            <li><a href="to_dos">My Planner</a></li>
            <li><a href="#">Contact Us</a></li>
          </ul>
          
          <!-- end .sidebar1 --></div>
          <div class="content">
            <p id="notice"><%= notice %></p>

            <h1 style="line-height:.001">
            <center>
              <strong>
              <%= @goal.Goal %>
              </strong>
            </center>
            </h1>

            <p style="line-height:.7">
              <center>
                <font size="1.3">
                Date Created: <%= @goal.Date %><br>
                Due Date: <%= @goal.DueDate %>
                </font>
              </center>
            </p>

            <h2 style="line-height:.1">
              <strong>Description:</strong>
            </h2>

            <p>
                <font size="2"><%= @goal.Description %></font>
            </p>

            <p>

            <h2>
              <strong>Steps:</strong>
            </h2>
            <p>
              <ol>
                <% @goal.steps.each do |step| %>
                <% if @goal.id == step.goal_id %>
                <li>
                  <p>
                    <%= step.requirement %> (Estimated Time: <%= step.completionTime %>) <%= link_to 'Show', goal_step_path(@goal, step.id) %>
                  </p>
                </li>
                <% end %>
                <% end %>
              </ul>
            </p>
            
            <%= link_to 'Edit', edit_goal_path(@goal) %> |
            <%= link_to 'Back', goals_path %>
            <!-- end .content -->
          </div>
          <div class="footer">
            <p><strong>© 2016 Mak Survival Edition.  All rights reserved.</strong></p>
            <!-- end .footer --></div>
            <!-- end .container --></div>
          </body>
        </html>